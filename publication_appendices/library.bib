issn = {0022-3433},
journal = {Journal of Peace Research},
keywords = {climate change and security,communal violence,game theory,non-state actor violence,property rights,resources},
number = {1},
pages = {23--34},
title = {{African range wars: Climate, conflict, and property rights}},
volume = {49},
