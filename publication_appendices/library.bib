author = {Heyer, Evelyne and Brazier, Lionel and S{\'{e}}gurel, Laure and Hegay, Tatiana and Austerlitz, Fr{\'{e}}d{\'{e}}ric and Quintana-Murci, Lluis and Georges, Myriam and Pasquet, Patrick and Veuille, Michel},
doi = {10.3378/027.083.0304},
file = {:C$\backslash$:/Users/ub/OneDrive/Bib/CS5/Heyer et al{\_}2011{\_}Lactase Persistence in Central Asia.pdf:pdf},
isbn = {1534-6617 (Electronic)$\backslash$r0018-7143 (Linking)},
issn = {0018-7143},
journal = {Human biology; an international record of research},
number = {3},
pages = {379--392},
pmid = {21740154},
title = {{Lactase persistence in central Asia: phenotype, genotype, and evolution.}},
