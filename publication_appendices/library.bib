author = {Blench, Roger},
file = {:C$\backslash$:/Users/ub/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Blench - 2001 - 'You can't go home again' Pastoralism in the new millennium.pdf:pdf},
