file = {:C$\backslash$:/Users/ub/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Macopiyo - 2005 - Spatially explicit, individual-based modelling of pastoralists' mobility in the rangelands of east africa.pdf:pdf},
