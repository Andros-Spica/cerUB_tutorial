isbn = {1072-5369},
issn = {15737764},
journal = {Journal of Archaeological Method and Theory},
keywords = {Adaptation,CS5,Complex adaptive systems,Complexity,Computational model,Emergence,Subsistence agriculture,Tipping points,modeling,modelling},
mendeley-tags = {CS5,modeling,modelling},
