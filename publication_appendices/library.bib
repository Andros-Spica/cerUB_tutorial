keywords = {CS5,Caucasus,sedentism-mobility},
mendeley-tags = {CS5,Caucasus,sedentism-mobility},
school = {University of Toronto},
title = {{Mobility and Social Organization on the Ancient Anatolian Black Sea Coast : An Archaeological , Spatial and Isotopic Investigation of the Cemetery at İkiztepe , Turkey}},
year = {2010}
}
