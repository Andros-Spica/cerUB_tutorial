keywords = {entropy maximization,settlement systems,simulation,spatial interaction model,survey},
number = {1},
pages = {1--33},
pmid = {2005213244},
title = {{Evaluating Settlement Structures in the Ancient Near East using Spatial Interaction Entropy Maximization}},
