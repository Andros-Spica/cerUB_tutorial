@phdthesis{Curran2006,
abstract = {Population learning can be described as the iterative Darwinian process of fitness-based selection and genetic transfer of information leading to populations of higher fitness. Life-time learning describes the process of learning undertaken by individuals in a population during their lifetime. These two learning models are often simulated using genetic algorithms and neural networks, respectively, and can be used to evolve efficient neural networks for a variety of tasks. Cultural learning describes the process of information transfer between indi- viduals in a population through non-genetic means. Typically this is achieved through communication or the creation of artifacts available to all members of a population. Cultural learning has been simulated by combining genetic algorithms and neural networks using a teacher/pupil scenario where highly fit individuals are selected as teachers and instruct the next generation. This thesis examines the effects of cultural learning on a population of evolving neural network agents inhabiting an environment where they must solve a number of problem tasks. Three benchmark sequential decision tasks have been chosen as the evolutionary task for the population: connect-four, tic-tac-toe and blackjack. A number of experiments were carried out for each task, each with two pop- ulations. The first employed population learning alone and the second employed both population and cultural learning. The experiments measured the fitness of each population as well as their genetic and behavioural diversity in a stable and a dynamic environment. vi},
author = {Curran, Dara},
file = {:C$\backslash$:/Users/ub/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Curran - 2006 - An Empirical Analysis of Cultural Learning.pdf:pdf},
